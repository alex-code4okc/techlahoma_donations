<script src="https://checkout.stripe.com/checkout.js"></script>
<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name do %>Please enter the name that you'd like to appear on our donations page.  Leave this blank if you'd rather be all mysterious.<% end %><br>
    <%= f.text_field :name, :placeholder => "An Anonymous Donor", :class=>"text" %>
  </div>

  <p>Use the slider below to choose how much to donate.</p>
  <div id="amount_slider"></div>
  <h2 id="amount_display">$50</h2>
  <div class="field">
    <%= f.hidden_field :amount %>
  </div>



  <div class="actions">
    <%= f.submit "Donate Now!", :class => "button" %>
  </div>
<% end %>
