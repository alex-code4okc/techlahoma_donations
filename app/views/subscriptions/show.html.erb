<div class="row 150%">
  <div class="8u 12u(narrower)">

    <h1>Thank you!</h1>
    <p>
      Thank you for your continuing support of <%= cents_to_dollars(@subscription.amount) %>
      per <%= @subscription.plan[:interval] %>.
    </p>


    <h3>Donor Recognition</h3>
    <p>
      You'll be listed on our donors page as <%= @subscription.donor_name %>.
    </p>

    <!--
    <h3>Mailing Address</h3>

    <p>
      <%= @subscription.address1 %><br/>
      <% if @subscription.address2.present? %>
        <%= @subscription.address2 %><br/>
      <% end %>
      <%= @subscription.city %> <%= @subscription.state %> <%= @subscription.zipcode %><br/>
    </p>
    -->


    <% if @subscription.canceled? %>
      <h3>This subscription has been canceled.</h3>
    <% else %>
      <%= link_to 'Cancel this subscription', @subscription, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

  </div>
  <div class="4u 12u(narrower)">
    <section id="sidebar">
      <%= render 'subscriptions/side_tax_deductible' %>
      <%= render 'subscriptions/side_employer_match' %>
    </section>
  </div>
</div>
