<% content_for :hero do %>
  <!-- Hero -->
  <section id="hero" class="container">
    <header>
      <h2>Techlahoma Sponsorships Plans</h2>
    </header>
    <p>
      Sponsor Techlahoma communities to make prominent connections with Oklahoman tech professionals.
    </p>
    <p>
    Sponsor in 2016 to be forever recognized as a<br>
    <strong>Founding Sponsor</strong>!
    </p>
  </section>
<% end %>


<div class="row">
<% Sponsorship::PLANS.each do |plan| %>
  <section class="6u 12u(narrower) feature">
    <div class="plan">
    <h3><%= plan[:name] %></h3>
    <h3>$<%= plan[:cost_in_dollars_per_year] %> / year</h3>
    <p><%= plan[:benefits] %></p>
    <%= link_to "Sponsor Now as a<br/>#{plan[:name]}!".html_safe, new_sponsorship_path(:plan_id => plan[:id]), :class => "button cta" %>
    </div>
  </section>
<% end %>
</div>


<div class="row">
  <section class="6u 12u(narrower) feature">
    <div class="plan">
    <h3>User Group Hero</h3>
    <h3>$2,048</h3>
    <h3>12 Opportunities</h3>
    <%= link_to "Sponsor Now", '#', :class => "button" %>
    <br/><br/>
    <p>
      Website Stratified Recognition props
    </p>
    <p>
      Choose a month to be recognized as User Group Hero of the month in each Techlahoma technology group meeting.
    </p>
    </div>
  </section>

  <section class="6u 12u(narrower) feature">
    <div class="plan">
    <h3>Bootstrap Funder</h3>
    <h3>$5,120</h3>
    <h3>Only 2 Opportunities</h3>
    <%= link_to "Sponsor Now", '#', :class => "button" %>
    <br/><br/>
    <p>
      Website Stratified Recognition props
    </p>
    <p>
      Recognition at Tulsa or OKC based Techlahoma technology groups from May 2016 - April 2017
    </p>
    </div>
  </section>
</div>

<section class="feature">
  <h4>Interested in sponsoring at a higher level? <%= link_to 'Contact Us!', '#' %></h4>
</section>
