Techlahoma.Subscriptions.donorAcceptsGift = function(){
  var radioVal = $('input:radio[name="subscription[accept_gift]"]:checked').val();
  return radioVal === 'true';
}


Techlahoma.Subscriptions.validateField = function(selector, validator){
  console.log('selector ',selector);
  var field = $(selector);
  console.log('val ', field.val());
  var valid = validator(field.val());
  if(valid){
    field.removeClass('error');
  }else{
    field.addClass('error');
  }
  return valid;
}

Techlahoma.Subscriptions.validatePresence = function(value){
  return value !== '' && typeof value !== 'undefined';
}






